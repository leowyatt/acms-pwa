{
  "name": "acms-pwa",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn build; yarn preview",
    "develop": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "https-preview": "serve dist",
    "prepare": "husky install",
    "pull": "git pull",
    "buildnc": "yarn dcd build --no-cache",
    "dcd": "docker compose --profile dev",
    "up": "yarn dcd up -d --build",
    "restart": "yarn dcd restart",
    "down": "yarn dcd down",
    "logs": "yarn dcd logs -f"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/icons-material": "^5.10.6",
    "@mui/lab": "5.0.0-alpha.100",
    "@mui/material": "^5.10.6",
    "@mui/system": "^5.10.6",
    "@mui/utils": "^5.10.6",
    "is-mobile": "^3.1.1",
    "nodemon": "^3.0.1",
    "notistack": "^2.0.5",
    "ra-data-graphql": "^4.8.4",
    "ra-i18n-polyglot": "^4.11.0",
    "ra-language-russian": "^3.13.5",
    "ra-postgraphile": "^6.1.0",
    "react": "^18.2.0",
    "react-admin": "^4.8.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-helmet-async": "^1.3.0",
    "react-hotkeys-hook": "^3.4.7",
    "react-router-dom": "^6.4.1",
    "recoil": "^0.7.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.7.21",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.24.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "https-localhost": "^4.7.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.3",
    "vite-plugin-pwa": "^0.13.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --max-warnings=0"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 2500,
    "watch": "./src/**/*",
    "exec": "yarn develop --host"
  }
}
