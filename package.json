{
  "name": "acms-pwa",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn build; yarn preview",
    "develop": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "https-preview": "serve dist",
    "prepare": "husky install",
    "pull": "git pull",
    "buildnc": "yarn dcd build --no-cache",
    "dcd": "docker compose --profile dev",
    "up": "yarn dcd up -d --build",
    "restart": "yarn dcd restart",
    "down": "yarn dcd down",
    "logs": "yarn dcd logs -f",
    "rm": "docker volume prune",
    "rms": "docker system prune -a --volumes",
    "upg": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.14",
    "@mui/lab": "5.0.0-alpha.149",
    "@mui/material": "^5.14.14",
    "@mui/system": "^5.14.14",
    "@mui/utils": "^5.14.14",
    "is-mobile": "^4.0.0",
    "nodemon": "^3.0.1",
    "notistack": "^3.0.1",
    "ra-data-graphql": "^4.14.3",
    "ra-i18n-polyglot": "^4.15.1",
    "ra-language-russian": "^4.14.1",
    "ra-postgraphile": "^6.1.2",
    "react": "^18.2.0",
    "react-admin": "^4.15.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^1.3.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-router-dom": "^6.17.0",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "https-localhost": "^4.7.1",
    "husky": "^8.0.1",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.16.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --max-warnings=0"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 2500,
    "watch": "./src/**/*",
    "exec": "yarn develop --host"
  }
}
